{
  "manifest_version": 3,
  "name": "Persistent Pomodoro Timer",
  "version": "1.0",
  "permissions": ["storage", "notifications", "scripting", "tabs"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "action": {
    "default_icon": "icon.png"
  }
}
